[Unit]
Description=MagicDraw Teamwork Server
After=syslog.target
After=network.target

[Service]
Type=forking
User=teamwork
Group=teamwork

ExecStart=/bin/bash -c '/opt/local/teamwork/bin/teamwork_server'
ExecStop=/bin/bash -c '/opt/local/teamwork/bin/stop_teamwork_server'

ExecReload=/bin/bash -c '/opt/local/teamwork/bin/stop_teamwork_server'
ExecReload=/bin/bash -c '/opt/local/teamwork/bin/teamwork_server'


[Install]
WantedBy=multi-user.target
